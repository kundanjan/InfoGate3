<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrinterRecords">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/addPrinterHeading"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_17sdp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Brand Name Section -->

            <EditText
                android:id="@+id/nameOfBrand"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/nameOfBrand"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.052" />

            <EditText
                android:id="@+id/suppliersAddress"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/suppliersFullAddress"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameOfBrand"
                app:layout_constraintVertical_bias="0.034" />

            <EditText
                android:id="@+id/dateOfReceiptOfComputers"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/dateofReceipt"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/suppliersAddress"
                app:layout_constraintVertical_bias="0.041" />

            <EditText
                android:id="@+id/costOfComputers"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/cost"
                android:inputType="number"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateOfReceiptOfComputers"
                app:layout_constraintVertical_bias="0.035" />

            <EditText
                android:id="@+id/DSRPageNo"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/dsrPage"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.262"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/costOfComputers"
                app:layout_constraintVertical_bias="0.033" />


            <EditText
                android:id="@+id/SRNo"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/SrNo"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/DSRPageNo"
                app:layout_constraintVertical_bias="0.078" />

            <EditText
                android:id="@+id/nameOfDepartment"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/nameofDepartment"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SRNo"
                app:layout_constraintVertical_bias="0.136" />

            <EditText
                android:id="@+id/nameOfLab"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@drawable/edittext_background"
                android:drawablePadding="@dimen/_16ssp"
                android:ems="8"
                android:fontFamily="@font/open_sans"
                android:hint="@string/nameofLab"
                android:inputType="text"
                android:padding="@dimen/_8ssp"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameOfDepartment"
                app:layout_constraintVertical_bias="0.733" />


            <!-- Add other form fields as needed -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/printer_btn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="@string/addbtn"

        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961"
        app:rippleColor="#FFEB3B" />

</androidx.constraintlayout.widget.ConstraintLayout>
